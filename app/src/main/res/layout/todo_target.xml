<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TargetList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingTop="8dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layoutTodo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner android:layout_gravity="left"
                android:id="@+id/pizzaspin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown">
            </Spinner>
            <EditText android:id="@+id/targetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="목표 수정"
                android:background="@null"/>
            <Button
                android:id="@+id/ListAddButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="+"
                android:layout_weight="0.2"
                app:backgroundTint="@android:color/holo_orange_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Addlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <CheckBox
                android:id="@+id/listBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"></CheckBox>

            <EditText
                android:id="@+id/listText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="리스트 수정"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/listdele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:text="삭제"
                android:textSize="10dp"
                android:textColor="@color/black"
                app:backgroundTint="@color/white" />
        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>